<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using MySQL and Node.js</title>
</head>
<body>
    <div class="table-data">
<h2>Display Data using Node.js & MySQL</h2>
<%
if (action=="get"){
%>
    <table border="1">
        <tr>
            <th>id</th>
            <th>firstname</th>
            <th>lastname</th>
            <th>email</th>
            <th>state</th>
            <th>city</th>
            <th>password</th>
            <th>image</th>
           
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        
        <%
        if(data.length!=0){
        var i=1;
        data.forEach(function(data){
        %>
        <tr>
            <th><%=data.id %></th>
            <th><%=data.firstname %></th>
            <th><%=data.lastname %>th>
            <th><%=data.email %></th>
            <th><%=data.state %></th>
            <th><%=data.city %></th>
            <th><%=data.password %></th>
            <th><%=data.image %></th>
          
            <td><a href="/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/delete/<%=data.id%>">Delete</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="5">No Data Found</td>
            </tr>
        <% } %>
    </table>
    <%
}
else{
    %>

    <div class="container">
        <h1 class="text-center mt-3 mb-3"></h1>
        
        <div class="card">
            <div class="card-header">Sample Form</div>
            <div class="card-body">
                <form method=post action="/update/<%=data.id%>">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                               
                                <input type="text" name="id" id="id" placeholder="id" value=<%=data.id%> >
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                
                                <input type="text" name="username" id="username" placeholder="username" value=<%=data.username%> >
                            </div>
                        </div>
                       
                        <div class="col-md-4">
                            <div class="mb-3">
                                
                                <input type="text" name="password" id="password" placeholder="password" value=<%=data.password%> >
                            </div>
                        </div>
                    </div>
                   
                    <div class="mb-3">
                        <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                    </div>
                </form>
               
            </div>
        </div>
    </div> 
    <%
}
%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>